@model StoneClinic.Models.Patient

@{
    ViewData["Title"] = "DeletePat";
}

<br />
<br />
<h3>Are you sure you want to delete this Patient?</h3>
<div>

    <hr style="width:600px;" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dob)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dob)
        </dd>
    </dl>
    
    <p style="color:red">@ViewBag.deletepatient</p>
    <form asp-action="DeletePat">
        <input type="hidden" asp-for="Patientid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewPatientDetails" class="btn btn-warning" style="color:white">Back</a>
    </form>
</div>
<div  style=" margin-bottom:50%;position:absolute;left:61%;top:62.5%;">
    <img src="~/images/Warning.png" style="height:60px;">
</div>
<div  style=" margin-bottom:50%;position:absolute;left:60%;top:22%; ">
    <img src="~/images/warning1.png" style="height:200px;">
</div>
