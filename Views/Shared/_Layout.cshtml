<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoneClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StoneClinic.styles.css" asp-append-version="true" />
    <link rel="icon" href="../images/Stone.png" />
</head>

<style>

    body {
        font-size: 105%;
        font-family: 'Arial Rounded MT';
        background-size: cover;
        backdrop-filter: blur(6px);
    }

    .btn {
        border-radius: 20px;
        box-shadow: 4px 4px 4px #cbced1, -4px -4px 4px white;
        transition: 0.5s;
    }

        .btn:hover {
            box-shadow: none;
        }



    ul li a:hover {
        background-color: white;
        border-radius: 10px;
        transition: 0.5s ease-in-out;
        color: black;
    }

    .txt {
        color: white;
    }

    .nav-link-txt {
        display: block;
        padding: 0.6rem 0.9rem;
        color: #FFFFFF;
        text-decoration: none;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

    .input-group-btn {
        padding: 10px;
        padding-bottom: 0px;
    }

        .input-group-btn svg {
            bottom: 5px;
            position: absolute;
            left: 95%;
        }
</style>
<body>
    <header>
        <nav id="bar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style=" background: linear-gradient(90deg, rgba(0,207,255,0.6225840678068102) 0%, rgba(17,187,231,0.5525560566023284) 42%, rgba(36,122,255,1) 100%);">
            <img src="~/Images/Stone.png" height="65" width="90" style="display:flex; padding:5px; padding-left:25px;" />


            <a class="navbar-brand" href="#">The Stone-<span class="text-light">Clinic</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <form class="navbar-form navbar-left" action="#">
                    <div class="input-group">
                        <input type="text" class="form-control" style="border-radius:19px;width:300px;height:30px;" placeholder="Search">
                        <div class="input-group-btn">

                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>

                        </div>
                    </div>
                </form>
                <ul class="navbar-nav flex-grow-1" id="text">
                    <li class="nav-item">
                        <a class="nav-link-txt" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-txt" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <partial name="LoginPartial" />
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
